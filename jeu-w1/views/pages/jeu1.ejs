    <input id="valueResp"  type="hidden" value="<%= idVraiReponse%>">
    <input id="scoreActuel"  type="hidden" value="<%= leScore%>">
    <input id="idquizz"  type="hidden" value="<%= lIdDuQuizz%>">

</div>
<script>

    function goToControllerOnGoodResponse(){
      let score = document.getElementById("scoreActuel").value;
      score++;
      const idquizz = document.getElementById("idquizz").value;
      urlToRequest = "/mycontroller/" + score + "/" + idquizz ;
      window.location.replace(urlToRequest);

    }

    function goToControllerOnBadResponse(){
      let score = document.getElementById("scoreActuel").value;
      const idquizz = document.getElementById("idquizz").value;
      urlToRequest = "/mycontroller/" + score + "/" + idquizz ;
      window.location.replace(urlToRequest);
    }

    function checkResponse1(){

      const myRepId = document.getElementById("valueResp").value;
      const idFromRadioButton = event.target.value;

       console.log(myRepId);
       console.log(idFromRadioButton);

      if(myRepId == idFromRadioButton){
        document.getElementById("divChoix1").setAttribute("class","goodResponse");
        setTimeout("goToControllerOnGoodResponse()" ,2000);
      }
      if(myRepId != idFromRadioButton){
        document.getElementById("divChoix1").setAttribute("class","falseResponse");
        setTimeout("goToControllerOnBadResponse()" , 2000);
      }

    }

